<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PHPCS configuration file.</description>
    <file>console</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <!-- ignore warnings and display ERRORS only -->
    <arg value="np"/>
    <!-- Our base rule: set to PSR12-->
    <rule ref="PSR12"/>
</ruleset>